  {% endblock %}

</head>

<body>



<div class="custom-menu-wrapper">
    <div class="pure-menu custom-menu custom-menu-top">
        <a href="#" class="pure-menu-heading custom-menu-brand">Le conte merveilleux</a>
        <a href="#" class="custom-menu-toggle" id="toggle"><s class="bar"></s><s class="bar"></s></a>
    </div>
    <div class="pure-menu pure-menu-horizontal pure-menu-scrollable custom-menu custom-menu-bottom custom-menu-tucked" id="tuckedMenu">
        <div class="custom-menu-screen"></div>
        <ul class="pure-menu-list">
            <li class="pure-menu-item"><a href= {{ path('homepage') }} class="pure-menu-link">Accueil</a></li>
            <li class="pure-menu-item"><a href= {{ path('catalogue')}} class="pure-menu-link">Catalogue des contes merveilleux</a></li>
            <li class="pure-menu-item"><a href= {{ path('motifIndex')}} class="pure-menu-link">Motif Index</a></li>
            <li class="pure-menu-item"><a href= {{ path('consulterBaseContes')}} class="pure-menu-link">Bibliographie Générale</a></li>
            <li class="pure-menu-item"><a href= {{ path('narratologie')}} class="pure-menu-link">Nouvelle Narratologie</a></li>
        </ul>
    </div>
</div>


<script>
(function (window, document) {
document.getElementById('toggle').addEventListener('click', function (e) {
    document.getElementById('tuckedMenu').classList.toggle('custom-menu-tucked');
    document.getElementById('toggle').classList.toggle('x');
});
})(this, this.document);
</script>

<!--
<div class="museum-flash alert alert-success">'message test alerte'</div>
-->
  {% for msg in app.session.flashBag.get('success') %}
            <div class="catalogue-flash alert alert-success">{{ msg }}</div>

  {% endfor %}

  {% for msg in app.session.flashBag.get('error') %}
            <div class="catalogue-flash alert alert-danger">{{ msg }}</div>
  {% endfor %}

