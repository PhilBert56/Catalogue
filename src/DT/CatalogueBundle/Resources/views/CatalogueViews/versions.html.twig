{% extends 'base.html.twig' %}

{% block body %}

    <h3><span>Catalogue Delarue Teneze</h3>
    <table class="table table-striped">
    <thead>
    <tr>
        <th>Conte Type</th>
        <th>Versions</th>
            {% for version in versions %}
            <tr>
            <td>

               <strong> 
                    {% if version.fichierSource == '' %} 
                        {{version.numero}}
                    {% else %}
                        <a href="{{ path('ct_show_file', {'ctCode':version.ctCode, 'numeroVersion' : version.numero} )  }}"> {{version.numero}} </a>
                    {% endif %}
                    - {{ version.reference }} 
                </strong></br>

                {% for ligne in version.description %}
                    {{ ligne }} </br>
                {% endfor %}
            </td>
        </tr>
    {% endfor %}

        
    </tr>
    </thead>
    <tbody>
    
    </tbody>



</table>
    


{% endblock %}